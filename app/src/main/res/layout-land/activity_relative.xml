<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relative"
    android:background="@color/blackColor">

    <Button
        android:id="@+id/redButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/redButton"
        android:background="@color/redColor"
        />

    <Button
        android:id="@+id/orangeButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/orangeButton"
        android:layout_centerHorizontal="true"
        android:background="@color/orangeColor"
        />

    <Button
        android:id="@+id/yellowButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/yellowButton"
        android:layout_alignParentEnd="true"
        android:background="@color/yellowColor"
        />

    <Button
        android:id="@+id/blueButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:text="@string/blueButton"
        android:layout_centerInParent="true"
        android:background="@color/blueColor"
        />

    <Button
        android:id="@+id/greenButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/greenButton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/blueButton"
        android:background="@color/greenColor"
        />

    <Button
        android:id="@+id/indigoButton"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/indigoButton"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/blueButton"
        android:background="@color/indigoColor"
        />

    <Button
        android:id="@+id/violetButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relativeHeight"
        android:layout_margin="@dimen/relativeMarginSize"
        android:text="@string/violetButton"
        android:layout_alignParentBottom="true"
        android:background="@color/violetColor"
        />




</RelativeLayout>